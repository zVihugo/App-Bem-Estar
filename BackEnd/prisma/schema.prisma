generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  email          String @unique
  name           String 
  password       String

  dateOfBirth    String
  faculty        String
  course         String

  reviews Review[]
  @@map("users")
}

model Review {
  id                        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId                    String   @db.ObjectId
  sleepHours                Float

  difficultySleepFrequency  DifficultySleepFrequency
  wakeUpRested              WakeUpRested
  daytimeDrowsiness         DaytimeDrowsiness
  usageScreenBeforeSleep    UsageScreenBeforeSleep
  hasRoutineSleep           Boolean
  createdAt DateTime @default(now())
  user                      User  @relation(fields: [userId], references: [id])
  @@map("reviews")
}

enum DifficultySleepFrequency {
  never
  rarely
  sometimes
  often
  almost_always
}

enum WakeUpRested {
  always
  sometimes
  rarely
  never
}

enum DaytimeDrowsiness {
  never
  rarely
  often
  always
}

enum UsageScreenBeforeSleep {
  never
  rarely
  sometimes
  almost_always
  always
}
